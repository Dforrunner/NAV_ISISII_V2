                        <row>
                            <entry valign="bottom" align="center">
                                <para>
                                    <emph type="bold">Application</emph>
                                </para>
                            </entry>
                            <entry valign="bottom" align="center">
                                <para>
                                    <emph type="bold">Product (Loctite Except Where Noted)</emph>
                                </para>
                            </entry>
                            <entry valign="bottom" align="center">
                                <para>
                                    <emph type="bold">Color</emph>
                                </para>
                            </entry>
                            <entry valign="bottom" align="center">
