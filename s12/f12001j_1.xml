            <configure>
                <vendorgroup/>

                <vendor>KYSOR</vendor>
                <truckmodelgroup/>

                <truckmodel>2000</truckmodel>
                <truckmodel>8100</truckmodel>
                <truckmodel>8200</truckmodel>
                <truckmodel>8300</truckmodel>
                <truckmodel>9100</truckmodel>
                <truckmodel>9200</truckmodel>
                <truckmodel>9300</truckmodel>
                <truckmodel>9400</truckmodel>
                <truckmodel>9600</truckmodel>
                <truckmodel>9700</truckmodel>
                <truckmodel>9800</truckmodel>
                <ucodegroup/>

                <ucode>12TKG</ucode>
                <ucode>12TKH</ucode>
                <ucode>12TKJ</ucode>
