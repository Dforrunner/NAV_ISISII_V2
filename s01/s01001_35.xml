<isis lang="en">
    <stitle>FRAME - FIFTH WHEEL INSTALLATION - REPLACEMENT</stitle>
    <svcsection/>
    <svcproc svcproctype="replace" graphiccount="0">
        <title>REPLACEMENT</title>
        <svcsubproc>
            <title>Remove</title>
            <step1>
                <para count="1">Remove all bolts retaining fifth wheel to mounting angle.</para>
            </step1>
            <step1>
                <para count="1">Remove fifth wheel assembly from vehicle frame.</para>
            </step1>
        </svcsubproc>
        <svcsubproc>
            <title>Install</title>
            <step1>
                <para count="1">Position fifth wheel assembly on mounting angles. Be sure to properly align bolt holes
                    in angle bracket to fifth wheel.
                </para>
            </step1>
            <step1>
                <para count="1">Install all retaining bolts and tighten to the specified torque.</para>
            </step1>
        </svcsubproc>
    </svcproc>
