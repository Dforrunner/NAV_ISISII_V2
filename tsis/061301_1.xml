    <stitle>TSI 06-13-01R - Allison WT Transmission Control Module Relocation</stitle>
    <tsi id="tsi061301" tsitype="truck">
        <tsinumber>06-13-01R</tsinumber>
        <replace>
            <tsinumber>05-13-02</tsinumber>
