<isis lang="en">
    <stitle>TSI 05-47-01R - RE 300 Bus Models Built Between March 1, 2004 and March 20, 2005 with International DT 466
        2004 EGR Engines Require a Body Modification to Improve Engine Valve Cover Removal
    </stitle>
    <tsi id="tsi054701" tsitype="truck">
        <tsinumber>05-47-01R</tsinumber>
        <tsidate>October, 2005</tsidate>
        <subjectfile>BUS BODY</subjectfile>
        <subjectgroup>
            <subject>RE 300 Bus Models Built Between March 1, 2004 and March 20, 2005 with International DT 466 2004 EGR
                Engines Require a Body Modification to Improve Engine Valve Cover Removal
            </subject>
        </subjectgroup>
        <distribution dealer="yes" fleet="yes" bodybuilder="no" isis_cd="yes"/>
        <apply>
            <configure>
                <truckmodelgroup/>

                <truckmodel>RE 300
                    <daterange>
                        <startdate>03/01/2004</startdate>
                        <enddate>03/20/2005</enddate>
                    </daterange>
                </truckmodel>
                <truckmodel>RE Bus
                    <daterange>
                        <startdate>03/01/2004</startdate>
                        <enddate>03/20/2005</enddate>
                    </daterange>
                </truckmodel>
                <truckmodel>RE S Bus
                    <daterange>
                        <startdate>03/01/2004</startdate>
                        <enddate>03/20/2005</enddate>
                    </daterange>
                </truckmodel>
                <engfamgroup/>

                <engfam>DT 466</engfam>
            </configure>
        </apply>
        <description>
            <geninfo>
                <para>
                    <emph type="bold">REVISION DESCRIPTION</emph>
                </para>
                <para>Instructions added to the end of this TSI's pdf.</para>
                <para>A service kit, with instructions, is available to modify the RE 300 bus body and improve removal
                    of the valve cover from DT 466 2004 EGR engines.
                </para>
            </geninfo>
        </description>
        <partsinfo>
            <table id="t054701" tblwidth="pg-wide">
                <tgroup cols="3" align="center">
                    <colspec colname="col1" colwidth="0.75*"/>
