            <subject>Ressorts de l'essieu directeur &#224; 2 phases avec amortisseurs</subject>
        </subjectgroup>
        <apply>
            <configure>
                <truckmodelgroup/>

                <truckmodel>5000
                    <daterange>
                        <startdate>02/01/1994</startdate>
                    </daterange>
