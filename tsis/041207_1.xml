    <stitle>TSI 04-12-07 - In-line Engine Standard Torque Values</stitle>
    <tsi id="tSI041207" tsitype="engine">
        <tsinumber>04-12-07</tsinumber>
        <tsidate>January, 2004</tsidate>
        <subjectfile>Engine</subjectfile>
        <subjectgroup>
            <subject>In-line Engine Standard Torque Values</subject>
        </subjectgroup>
        <apply>
            <configure>
                <engfamgroup/>

                <engfam>DT 466
                    <snrange>1273511 and above</snrange>
                </engfam>
