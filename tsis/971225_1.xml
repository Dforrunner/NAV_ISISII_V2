<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="../isisxsl.xsl"?>
<isis lang="en">
    <stitle>TSI 97-12-25 - Oil Pan Heater Availability</stitle>
    <tsi id="tsi971225" tsitype="engine">
        <tsinumber>97-12-25</tsinumber>
        <tsidate>November, 1997</tsidate>
        <subjectfile>ENGINE</subjectfile>
        <subjectgroup>
            <subject>Oil Pan Heater Availability</subject>
        </subjectgroup>
        <apply>
            <configure>
                <engfamgroup/>

                <engfam>DT 466</engfam>
                <engfam>DT 466E</engfam>
                <engfam>530</engfam>
                <engfam>530E</engfam>
            </configure>
        </apply>
        <description>
            <geninfo>
                <para>In order to ease cold weather starting, an oil pan heater is available for installation by the
                    customer or Navistar dealer. The assembly includes a dual drain oil pan and a 150 watt - 120 volt
                    heating element with cable.
                </para>
            </geninfo>
        </description>
        <partsinfo>
            <table id="t9712251" frame="all">
                <title>PARTS INFORMATION</title>
                <tgroup cols="2" colsep="1" rowsep="1">
                    <colspec colwidth="1.75in"/>
                    <colspec colwidth="3.74in"/>
                    <thead>
                        <row>
                            <entry valign="top" align="center">
                                <para>
                                    <emph type="bold">New Part Number</emph>
                                </para>
                            </entry>
                            <entry valign="top" align="center">
                                <para>
                                    <emph type="bold">Description</emph>
                                </para>
                            </entry>
                        </row>
                    </thead>
                    <tbody>
                        <row>
                            <entry valign="top" align="center">
                                <para>1 823 740 C92</para>
                            </entry>
                            <entry valign="top">
                                <para>Oil Pan Assembly (Includes Oil Pan 1 823 741C1, Gasket (2) 1 825 610C1, Plug (2) 1
                                    825 504C1, and Heater Assembly 1 830 170 C91)
                                </para>
                            </entry>
                        </row>
                        <row>
                            <entry valign="top" align="center">
                                <para>1 830 170 C91</para>
                            </entry>
                            <entry valign="top">
                                <para>Heater Assembly (Includes Heater Element Cable 1 830 171C1, Heater Element 1 830
                                    168C1, and O-Ring 1 825 610C1)
                                </para>
                            </entry>
                        </row>
                    </tbody>
                </tgroup>
            </table>
        </partsinfo>
        <svcproc svcproctype="Install" graphiccount="0">
            <title>SERVICE NOTE</title>
            <para>Refer to Engine Service Manual for oil pan removal and installation instructions.</para>
            <para>For torque values see
                <hotlnk xrefid="t9712252">Table 2</hotlnk>.
            </para>
            <table id="t9712252" frame="all">
                <title>TORQUE VALUES</title>
                <tgroup cols="3" colsep="1" rowsep="1">
                    <colspec colname="col1" colwidth="3.03in"/>
                    <colspec colwidth="1.32in"/>
                    <colspec colname="col3" colwidth="1.15in"/>
                    <tbody>
                        <row>
                            <entry valign="top">
                                <para>Oil Pan Bolt</para>
                            </entry>
                            <entry valign="top" align="center">
                                <para>17 lb-ft</para>
                            </entry>
                            <entry valign="top">
                                <para>(23Nm)</para>
                            </entry>
                        </row>
                        <row>
                            <entry valign="top">
                                <para>Oil Pan Drain Plug</para>
                            </entry>
                            <entry valign="top" align="center">
                                <para>50 lb-ft</para>
                            </entry>
                            <entry valign="top" align="center">
                                <para>(68Nm)</para>
                            </entry>
                        </row>
                        <row>
                            <entry valign="top">
                                <para>Oil Heater Element</para>
                            </entry>
                            <entry valign="top">
                                <para>50 lb-ft</para>
                            </entry>
                            <entry valign="top">
                                <para>(68Nm)</para>
                            </entry>
                        </row>
                    </tbody>
                </tgroup>
            </table>
        </svcproc>
    </tsi>
</isis>
