    <stitle>TSI 02-12-18 - Viscous Fan Drive "Temperature Engagement" Variability</stitle>
    <tsi id="tsi021218" tsitype="truck">
        <tsinumber>02-12-18</tsinumber>
        <tsidate>September, 2002</tsidate>
        <subjectfile>ENGINE</subjectfile>
        <subjectgroup>
            <subject>Viscous Fan Drive "Temperature Engagement" Variability</subject>
        </subjectgroup>
        <apply>
