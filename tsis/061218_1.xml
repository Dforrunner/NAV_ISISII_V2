<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="../isisxsl.xsl"?>
<isis lang="en">
    <stitle>TSI 06-12-18 - Release of New Main Drive Belts to Eliminate Belt Chirp</stitle>
    <tsi id="tSI061218" year="2006" tsitype="engine">
        <tsinumber>06-12-18</tsinumber>
        <tsidate>July 2006</tsidate>
        <subjectfile>Engine</subjectfile>
        <subjectgroup>
            <subject>Release of New Main Drive Belts to Eliminate Belt Chirp</subject>
        </subjectgroup>
        <apply>
            <configure>
                <engfamgroup/>

                <engfam>VT 275
                    <snrange>0143815 and above</snrange>
                </engfam>
            </configure>
        </apply>
        <description>
            <geninfo>
                <para>Two new replacement drive belts have been released for use on all applications of the
                    International&#174; VT 275 diesel engines. Use these belts to eliminate belt chirp.
                </para>
            </geninfo>
        </description>
        <svcproc svcproctype="replace" graphiccount="0">
            <title>Belt Replacement</title>
            <para>Refer to Engine Operation and Maintenance Manual for belt replacement procedure.</para>
            <table frame="topbot">
                <title>Part numbers for replacement belts</title>
                <tgroup cols="3">
                    <colspec colname="COLSPEC0" colwidth="1.45*"/>
                    <colspec colname="col1" colwidth="0.77*"/>
                    <colspec colname="col2" colwidth="0.81*"/>
                    <spanspec namest="col1" nameend="col2" spanname="SPAN1"/>
                    <tbody>
                        <row>
                            <entry>
                                <para>Description</para>
                            </entry>
                            <entry>
                                <para>Old</para>
                            </entry>
                            <entry>
                                <para>New</para>
                            </entry>
                        </row>
                        <row>
                            <entry>
                                <para>Without air conditioning</para>
                            </entry>
                            <entry>
                                <para>1850296C1</para>
                            </entry>
                            <entry>
                                <para>1874521C1</para>
                            </entry>
                        </row>
                        <row>
                            <entry>
                                <para>With air conditioning</para>
                            </entry>
                            <entry>
                                <para>1846055C1</para>
                            </entry>
                            <entry>
                                <para>1848715C1</para>
                            </entry>
                        </row>
                    </tbody>
                </tgroup>
            </table>
        </svcproc>
    </tsi>
</isis>
