    <stitle>TSI 01-12-15 - Identifying Remanufactured Engines</stitle>
    <tsi id="tsi011215" tsitype="engine">
        <tsinumber>01-12-15</tsinumber>
        <tsidate>12, 2001</tsidate>
        <subjectfile>Engine</subjectfile>
        <subjectgroup>
            <subject>Identifying Remanufactured Engines</subject>
        </subjectgroup>
        <apply>
            <configure>
                <engfamgroup/>

                <engfam>T 444E</engfam>
                <engfam>7.3L DIT</engfam>
                <engfam>7.3L IDI</engfam>
