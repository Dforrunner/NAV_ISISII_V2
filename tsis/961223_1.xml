<isis lang="en">
    <stitle>TSI 96-12-23 - Belt Tension for "V" and Ribbed Poly "V" Belts</stitle>
    <tsi id="tsi961223" tsitype="truck">
        <tsinumber>96-12-23</tsinumber>
        <tsidate>September, 1996</tsidate>
        <subjectfile>ENGINE</subjectfile>
        <subjectgroup>
            <subject>Belt Tension for "V" and Ribbed Poly "V" Belts</subject>
        </subjectgroup>
        <apply>
            <configure>
                <truckmodelgroup/>

                <truckmodel>2000</truckmodel>
                <truckmodel>4000</truckmodel>
                <truckmodel>8100</truckmodel>
                <truckmodel>8200</truckmodel>
                <truckmodel>8300</truckmodel>
                <truckmodel>9200</truckmodel>
                <truckmodel>9300</truckmodel>
                <truckmodel>9400</truckmodel>
