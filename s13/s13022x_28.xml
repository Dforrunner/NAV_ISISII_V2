                    <tbody valign="top">
                        <row>
                            <entry>
                                <para>Temperature</para>
                            </entry>
                            <entry>
                                <para>Grade</para>
                            </entry>
                            <entry>
                                <para>Type</para>
                            </entry>
                        </row>
                        <row rowsep="1">
                            <entry>
                                <para>All An oil cooler is required with this transmission.</para>
                            </entry>
                            <entry>
                                <para>CD 50</para>
                            </entry>
                            <entry>
                                <para>Synthetic engine oil meeting MIL-L-2104 D or MIL-L-46152 B, API-SF or API-CD
                                </para>
                            </entry>
                        </row>
                    </tbody>
                </tgroup>
            </table>
