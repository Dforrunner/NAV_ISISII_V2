                <colspec colname="col3" colwidth="1.00*"/>
                <tbody>
                    <row>
                        <entry>
                            <para>1 (0.010)</para>
                            <para>
                                <emph type="underscr">1 (0.005)</emph>
                            </para>
                            <para>0.015-inch</para>
                        </entry>
