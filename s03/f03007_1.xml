        <title>SUSPENSION PNEUMATIQUE HENDRICKSON &#192; RESSORTS &#192; LAMES AUXILIAIRES</title>
        <apply>
            <configure>
                <vendorgroup/>

                <vendor>HENDRICKSON</vendor>
                <truckmodelgroup/>

                <truckmodel>2000</truckmodel>
                <truckmodel>5000</truckmodel>
