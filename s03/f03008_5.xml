            <figure id="f0300805" figsize="col-wide">
                <graphic filename="../figg03/g0300805.webp" type="webp" resolution="72"/>
                <caption>Figure 5. Balancier</caption>
                <calloutgroup>
                    <callout1>1. SUPPORT DE BALANCIER</callout1>
                    <callout1>2. COUSSINET D'ADAPTATEUR DE BALANCIER</callout1>
                    <callout1>3. RONDELLE</callout1>
                    <callout1>4. &#201;CROU</callout1>
                    <callout1>5. BALANCIER</callout1>
