                    <callout1>7. CLAPET DE RETENUE</callout1>
                    <callout1>8. GUIDE DE RESSORT DE CLAPET DE RETENUE</callout1>
                    <callout1>9. RESSORT DE CLAPET DE RETENUE</callout1>
                    <callout1>10. BOUCHON DE TUYAU</callout1>
                    <callout1>11. COUVERCLE D'&#201;CHAPPEMENT</callout1>
                    <callout1>12. MEMBRANE</callout1>
                    <callout1>13. SOUPAPE D'ADMISSION ET D'&#201;CHAPPEMENT</callout1>
                    <callout1>14. &#201;CROU DE CHAPEAU</callout1>
                    <callout1>15. JOINT TORIQUE</callout1>
                    <callout1>16. BUT&#201;E DE SOUPAPE</callout1>
