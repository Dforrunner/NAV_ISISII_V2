    <svcproc svcproctype="IDcomponent" graphiccount="0">
        <title>REMOVE</title>
        <step1>
            <para count="1">Set parking brake and block wheels.</para>
        </step1>
        <step1>
            <para count="1">Drain air system.</para>
        </step1>
        <step1>
            <para count="1">Disconnect heater wire if valve is so equipped.</para>
        </step1>
        <step1>
            <para count="1">Remove automatic drain valve.</para>
        </step1>
    </svcproc>
