    <svcproc svcproctype="describe" graphiccount="0">
        <title>ABS INDICATOR LAMP</title>
        <randlist type="bullet">
            <item>
                <para>ABS indicator lamp must be amber or yellow.</para>
            </item>
            <item>
                <para>Mount ABS indicator lamp in front, and in clear view, of the driver.</para>
            </item>
            <item>
                <para>Select lamp easily seen in daylight but not excessive at night, 2 watt max. Follow OEM lumens
                    rating recommendations.
                </para>
            </item>
        </randlist>
    </svcproc>
