        <svcproc svcproctype="replace" graphiccount="1">
            <title>SERVICE PROCEDURE</title>
            <para>Refer to
                <hotlnk xrefid="f9990601">Figure 1</hotlnk>.
            </para>
            <figure id="f9990601" figsize="pg-wide">
                <graphic filename="../afcfigures/g9990601.webp" type="webp" scalefit="1" scalefitwidth="514px"
                         resolution="150"/>
