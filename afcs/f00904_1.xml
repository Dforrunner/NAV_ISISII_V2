        <subjectfile>B&#194;TI</subjectfile>
        <subject>Les mod&#232;les 9000 et 9000i construits &#224; Garland entre le 22 avril 1999 et le 4 janvier 2000 et
            dot&#233;s d'une suspension &#224; traverses dos-&#224;-dos ou de traverses de milieu de b&#226;ti avec
            quatre boulons de retenue en moins.
        </subject>
        <apply>
            <configure>
                <truckmodelgroup/>

                <truckmodel>9000
                    <daterange>
                        <startdate>04/22/1999</startdate>
                        <enddate>01/04/2000</enddate>
                    </daterange>
                </truckmodel>
                <truckmodel>9000i
                    <daterange>
                        <startdate>04/22/1999</startdate>
                        <enddate>01/04/2000</enddate>
                    </daterange>
                </truckmodel>
