    <stitle>AFC G-03401 - Caliper Slide Pin Bolts</stitle>
    <afc id="afc03401">
        <afcnum>G-03401</afcnum>
        <afcdate>November, 2003</afcdate>
        <subjectfile>BRAKES</subjectfile>
        <subject>Caliper Slide Pin Bolts</subject>
        <apply>
            <configure>
                <truckmodelgroup/>

