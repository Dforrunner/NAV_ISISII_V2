    <stitle>AFC 95906 - Transmission Oil Cooler Mounting Bracket</stitle>
    <afc id="AFC95906">
        <afcnum>95906</afcnum>
        <afcdate>March, 1995</afcdate>
        <subjectfile>TRANSMISSION</subjectfile>
        <subject>Transmission Oil Cooler Mounting Bracket</subject>
        <apply>
            <configure>
                <truckmodelgroup/>

                <truckmodel>2000
                    <daterange>
                        <startdate>06/28/1994</startdate>
                        <enddate>02/23/1995</enddate>
