    <stitle>AFC 97902 - Fan Belt Misalignment with Cummins N-14 Engine</stitle>
    <afc id="afc97902">
        <afcnum>97902</afcnum>
        <afcdate>June, 1997</afcdate>
        <subjectfile>ENGINE</subjectfile>
        <subject>Fan Belt Misalignment with Cummins N-14 Engine</subject>
        <apply>
            <configure>
                <vendorgroup/>

                <vendor>Cummins</vendor>
