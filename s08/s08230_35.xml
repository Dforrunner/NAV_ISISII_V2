    <stitle>ELECTRICAL SYSTEM TROUBLESHOOTING GUIDE - 2000, 4000, 8000 - CAB ACCESSORIES - TROUBLESHOOTING - LIGHTED
        MIRRORS
    </stitle>
    <svcman/>
    <svcproc svcproctype="troubleshoot" graphiccount="0">
        <title>LIGHTED MIRRORS</title>
        <table id="t0823206" tblwidth="full-page" frame="all" numbered="no" view="reveal">
            <title>Lighted Mirrors</title>
            <tgroup cols="7" colsep="1" rowsep="1" align="center" charoff="50">
                <colspec colname="1" charoff="50" colwidth="0.59in"/>
                <colspec colname="2" charoff="50" colwidth="0.50in"/>
                <colspec colname="3" charoff="50" colwidth="1.86in"/>
                <colspec colname="4" charoff="50" colwidth="0.94in"/>
                <colspec colname="5" charoff="50" colwidth="0.71in"/>
