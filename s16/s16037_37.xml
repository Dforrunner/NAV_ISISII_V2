                        <entry>
                            <para>15 ft-lbs; 20.3 Nm</para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <para>Flywheel housing bolts</para>
                        </entry>
                        <entry align="center">
                            <para>M8 x 1.25</para>
                        </entry>
                        <entry>
                            <para>13.0 to 15.2 ft-lbs; 17.7 to 20.6 Nm</para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <para>Engine feet bolts</para>
                        </entry>
                        <entry align="center">
                            <para>M10 x 1.25</para>
                        </entry>
                        <entry>
                            <para>28.9 to 33.3 ft-lbs; 39.1 to 45.1 Nm</para>
                        </entry>
                    </row>
                    <row>
