    <stitle>CAB: 2000, 4000, AND 8000 - TROUBLESHOOTING</stitle>
    <svcsection/>
    <svcsubsec>
        <title>TROUBLESHOOTING</title>
        <svcproc svcproctype="IDcomponent" graphiccount="0">
            <title>WINDSHIELD WIPERS (ELECTRIC MOTOR)</title>
            <table id="t1600701" tblwidth="full-page" frame="all" numbered="no" view="reveal">
                <title>Windshield Wipers (Electric Motor)</title>
                <tgroup cols="3" align="center" charoff="50" char="c">
                    <colspec colname="1" colwidth="2.00in"/>
                    <colspec colname="2" colwidth="2.00in"/>
                    <colspec colname="3" colwidth="2.03in"/>
                    <tbody valign="top">
                        <row>
                            <entry colname="1">
                                <para>
                                    <emph type="bold">CONDITION</emph>
                                </para>
                            </entry>
                            <entry colname="2">
                                <para>
                                    <emph type="bold">PROBABLE CAUSE</emph>
                                </para>
                            </entry>
                            <entry colname="3">
                                <para>
                                    <emph type="bold">REMEDY</emph>
                                </para>
                            </entry>
                        </row>
                        <row>
                            <entry colname="1">
                                <para>Stripped Gear Teeth</para>
                            </entry>
                            <entry colname="2">
                                <para></para>
                            </entry>
                            <entry colname="3">
                                <para>Replace complete unit.</para>
                            </entry>
                        </row>
                        <row>
                            <entry colname="1">
                                <para>Wiper Will Not</para>
                                <para>
                                    <emph type="bold">Operate</emph>
                                </para>
                            </entry>
                            <entry colname="2">
                                <seqlist style="alphauc">
                                    <item>
                                        <para>Binding condition in wiper arm shaft assemblies, connecting links, gear
                                            and shaft assembly or armature.
                                        </para>
                                    </item>
                                    <item>
                                        <para>Short, open, or ground in cable harness.</para>
                                    </item>
                                    <item>
                                        <para>Faulty manual switch.</para>
                                    </item>
                                    <item>
                                        <para>Shorted, open, or grounded armature.</para>
                                    </item>
                                    <item>
                                        <para>Broken wire to motor.</para>
                                    </item>
                                </seqlist>
                            </entry>
                            <entry colname="3">
                                <seqlist style="alphauc">
                                    <item>
                                        <para>Eliminate binding condition.</para>
                                    </item>
                                    <item>
                                        <para>Refer to Electrical Troubleshooting Manual.</para>
                                    </item>
                                    <item>
                                        <para>Replace switch.</para>
                                    </item>
                                    <item>
                                        <para>Replace motor.</para>
                                    </item>
                                    <item>
                                        <para>Correct.</para>
                                    </item>
                                </seqlist>
                            </entry>
                        </row>
                        <row>
                            <entry colname="1">
                                <para>Wiper Will Not Shut Off</para>
                            </entry>
                            <entry colname="2">
                                <seqlist style="alphauc">
                                    <item>
                                        <para>Faulty parking switch assembly.</para>
                                    </item>
                                    <item>
                                        <para>Faulty manual switch.</para>
                                    </item>
                                </seqlist>
                            </entry>
                            <entry colname="3">
                                <seqlist style="alphauc">
                                    <item>
                                        <para>Replace complete unit.</para>
                                    </item>
                                    <item>
                                        <para>Replace manual switch.</para>
                                    </item>
                                </seqlist>
                            </entry>
                        </row>
                        <row>
                            <entry colname="1">
                                <para>Wiper Continually Shutting Off</para>
                            </entry>
                            <entry colname="2">
                                <seqlist style="alphauc">
                                    <item>
                                        <para>Binding condition in wiper arm shaft assemblies, connecting link, or gear
                                            and shaft assembly.
                                        </para>
                                    </item>
                                    <item>
                                        <para>Electrical overload due to faulty motor.</para>
                                    </item>
                                    <item>
                                        <para>Faulty wire connections.</para>
                                    </item>
                                </seqlist>
                            </entry>
                            <entry colname="3">
                                <seqlist style="alphauc">
                                    <item>
                                        <para>Eliminate binding condition.</para>
                                    </item>
                                    <item>
                                        <para>Replace motor.</para>
                                    </item>
                                    <item>
                                        <para>Correct.</para>
                                    </item>
                                </seqlist>
                            </entry>
                        </row>
                        <row>
                            <entry colname="1">
                                <para>Wiper Operates At One Speed Only</para>
                            </entry>
                            <entry colname="2">
                                <seqlist style="alphauc">
                                    <item>
                                        <para>Short, open, or ground in cable harness.</para>
                                    </item>
                                    <item>
                                        <para>Faulty manual switch.</para>
                                    </item>
                                </seqlist>
                            </entry>
                            <entry colname="3">
                                <seqlist style="alphauc">
                                    <item>
                                        <para>Refer to Electrical Troubleshooting Manual.</para>
                                    </item>
                                    <item>
                                        <para>Replace switch.</para>
                                    </item>
                                </seqlist>
                            </entry>
                        </row>
                    </tbody>
                </tgroup>
            </table>
        </svcproc>
    </svcsubsec>
