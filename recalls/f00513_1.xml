    <stitle>French - Recall 00513 - Barres de direction TRW de certains mod&#232;les 1000, 2000, 3000, autobus FE,
        autobus RE, 4000 et 8000 construits entre le 05/07/1999 et le 31/10/1999
    </stitle>
    <recall id="rec00513" translation="french">
        <recallnumber>00513</recallnumber>
        <market>U.S., Export</market>
        <recalldate>Octobre 2000</recalldate>
        <subjectfile>DIRECTION</subjectfile>
        <subject>Barres de direction TRW de certains mod&#232;les 1000, 2000, 3000, autobus FE, autobus RE, 4000 et 8000
            construits entre le 05/07/1999 et le 31/10/1999
        </subject>
        <apply>
            <configure>
                <truckmodelgroup/>

                <truckmodel>1000
                    <daterange>
                        <startdate>07/05/1999</startdate>
                        <enddate>10/31/1999</enddate>
                    </daterange>
                </truckmodel>
                <truckmodel>2000
                    <daterange>
                        <startdate>07/05/1999</startdate>
                        <enddate>10/31/1999</enddate>
                    </daterange>
                </truckmodel>
