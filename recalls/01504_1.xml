<isis lang="en">
    <stitle>Recall 01504 - SAFETY RECALL (U.S., EXPORT) TRW Drag Links With 24-DL Size Ball Sockets On Certain 2000,
        4000, 5000 and 9000i model series, built from 7/16/1999 through 9/1/1999
    </stitle>
    <recall id="rec01504">
        <recallnumber>01504</recallnumber>
        <market>U.S., Export</market>
        <recalldate>April, 2001</recalldate>
        <subjectfile>STEERING</subjectfile>
        <subject>SAFETY RECALL (U.S., EXPORT) TRW Drag Links With 24-DL Size Ball Sockets On Certain 2000, 4000, 5000
            and 9000i model series, built from 7/16/1999 through 9/1/1999
        </subject>
        <apply>
            <configure>
                <vendorgroup/>

                <vendor>TRW</vendor>
                <truckmodelgroup/>

                <truckmodel>2000
                    <daterange>
                        <startdate>07/16/1999</startdate>
                        <enddate>09/01/1999</enddate>
                    </daterange>
                </truckmodel>
                <truckmodel>4000
                    <daterange>
                        <startdate>07/16/1999</startdate>
                        <enddate>09/01/1999</enddate>
                    </daterange>
                </truckmodel>
                <truckmodel>5000
                    <daterange>
