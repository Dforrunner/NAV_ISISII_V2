        <laborinfo>
            <para>
                <title>LABOR INFORMATION</title>
            </para>
            <para>This recall requires one Labor Operation to complete the repair. Labor Operation one, two, or three
                may be submitted on a Warranty Claim.
            </para>
            <table id="t9950805">
                <title>Labor Information</title>
                <tgroup cols="3">
                    <colspec colname="col1" colwidth="1.52in"/>
                    <colspec colname="col2" colwidth="2.50in"/>
                    <colspec colname="col3" colwidth="1.51in"/>
