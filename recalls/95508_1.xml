<isis lang="en">
    <stitle>Recall 95508 - Bobtail Proportioning (BTP) Brake System Built Incorrectly</stitle>
    <recall id="Rec95508">
        <recallnumber>95508</recallnumber>
        <market>U.S.</market>
        <recalldate>August, 1995</recalldate>
        <subjectfile>BRAKES</subjectfile>
        <subject>Bobtail Proportioning (BTP) Brake System Built Incorrectly</subject>
        <apply>
            <configure>
                <truckmodelgroup/>

                <truckmodel>2000
                    <daterange>
                        <startdate>04/21/1995</startdate>
                        <enddate>05/03/1995</enddate>
                    </daterange>
                </truckmodel>
                <truckmodel>8000
                    <daterange>
                        <startdate>04/21/1995</startdate>
                        <enddate>05/03/1995</enddate>
                    </daterange>
                </truckmodel>
                <truckmodel>9600
                    <daterange>
                        <startdate>04/21/1995</startdate>
                        <enddate>05/03/1995</enddate>
                    </daterange>
                </truckmodel>
                <truckmodel>9700
                    <daterange>
                        <startdate>04/21/1995</startdate>
                        <enddate>05/03/1995</enddate>
