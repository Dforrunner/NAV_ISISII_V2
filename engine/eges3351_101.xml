    <svcman/>
    <svcproc svcproctype="install" graphiccount="1">
        <title>Engine Coolant Temperature (ECT) Sensor</title>
        <figure id="f3350003117" figsize="col-wide">
            <graphic filename="../figK09/K09012.webp" type="webp" scalefit="1" scalefitwidth="248px"/>
            <caption>ECT sensor</caption>
        </figure>
        <step1>
            <para id="s0337" count="1">Install a new O-ring on ECT sensor.</para>
        </step1>
        <step1>
            <para count="1">Install ECT sensor into the water supply housing (Freon&#174; compressor bracket) and
                tighten to
                <hotlnk document="eges3351_106.xml" xrefid="t335000301">special torque</hotlnk>
                <xref refid="t335000301"/>.
            </para>
        </step1>
        <step1>
            <para count="1">Connect sensor harness connector to ECT sensor.</para>
        </step1>
        <step1>
            <para count="1">Push lock tab down to lock connector.</para>
        </step1>
    </svcproc>
