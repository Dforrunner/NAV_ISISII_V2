        <figure id="f1200607" figsize="col-wide">
            <graphic filename="../figcg1/cg11079.png" type="png" scalefit="1" scalefitwidth="248px" box="yes"/>
            <caption>Disassembling the Valve Lifter</caption>
            <calloutgroup>
                <callout1 type="arabic">Lifter Body with Roller</callout1>
                <callout1 type="arabic">Plunger Spring</callout1>
                <callout1 type="arabic">Plunger</callout1>
