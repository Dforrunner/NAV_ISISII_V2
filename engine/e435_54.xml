    <stitle>7.3 Liter Diesel Engine Service (1991) - CYLINDER HEAD AND VALVES - CYLINDER HEAD (Reconditioning) - VALVE
        KEEPERS
    </stitle>
    <svcman/>
    <svcproc svcproctype="proctype" graphiccount="0">
        <title>VALVE KEEPERS</title>
        <svcsubproc>
            <title>Cleaning</title>
            <step1>
                <para count="1">Clean valve keepers in a suitable solvent.</para>
            </step1>
        </svcsubproc>
        <svcsubproc>
            <title>Inspection</title>
            <step1>
                <para count="1">Visually inspect inside and outside of keepers for wear.</para>
            </step1>
            <step1>
                <para count="1">Replace any worn keepers in pairs, as required.</para>
            </step1>
        </svcsubproc>
    </svcproc>
