    <stitle>International&#174; MaxxForce&#8482; 7 Engine Service Manual - Lower Oil Pan, Upper Oil Pan, and Oil Pickup
        Tube - Installation - Lower Oil Pan
    </stitle>
    <svcman/>
    <svcproc id="s13.4.3" svcproctype="install" graphiccount="2">
        <title>Lower Oil Pan</title>
        <figure id="f3450013012" figsize="col-wide">
            <graphic filename="../figM06/M06100.webp" type="webp" scalefit="1" scalefitwidth="248px"
                     scalefitheight="192px" box="no"/>
            <caption>Lower oil pan and oil pan drain plug</caption>
            <calloutgroup>
                <callout1 type="arabic">M6 x 16 bolt (12)</callout1>
                <callout1 type="arabic">M6 x 16 stud bolt (3)</callout1>
                <callout1 type="arabic">Oil pan drain plug</callout1>
                <callout1 type="arabic">M6 x 25 bolt (5)</callout1>
                <callout1 type="arabic">Lower oil pan</callout1>
            </calloutgroup>
        </figure>
        <step1>
            <para count="1">Position lower oil pan on upper oil pan mating surface.</para>
        </step1>
        <step1>
            <para count="1">Install 12 M6 x 16 bolts.</para>
        </step1>
        <step1>
            <para count="1">Install five M6 x 25 bolts.</para>
        </step1>
        <step1>
            <para count="1">Install three M6 x 16 stud bolts.</para>
        </step1>
        <step1>
            <para count="1">Tighten lower oil pan bolts and stud bolts to
                <hotlnk document="eges3451_282.xml" xrefid="s13.t1">special torque</hotlnk>
                <xref refid="s13.t1"/>.
            </para>
        </step1>
        <step1>
            <para count="1">Install oil pan drain plug with new O-ring, and tighten to
                <hotlnk document="eges3451_282.xml" xrefid="s13.t1">special torque</hotlnk>
                <xref refid="s13.t1"/>.
            </para>
        </step1>
        <figure id="f3450013013" figsize="col-wide">
            <graphic filename="../figM06/M06107.webp" type="webp" scalefit="1" scalefitwidth="248px"
                     scalefitheight="192px" box="no"/>
            <caption>Harness bracket mounting</caption>
            <calloutgroup>
                <callout1 type="arabic">Harness bracket</callout1>
                <callout1 type="arabic">Upper oil pan</callout1>
                <callout1 type="arabic">M6 nut</callout1>
                <callout1 type="arabic">Lower oil pan</callout1>
                <callout1 type="arabic">M8 stud bolt</callout1>
            </calloutgroup>
        </figure>
        <step1>
            <para count="1">Position harness bracket and install M8 stud bolt. Tighten stud bolt to
                <hotlnk document="eges3451_343.xml" xrefid="s19.t1">standard torque</hotlnk>
                <xref refid="s19.t1"/>.
            </para>
        </step1>
        <step1>
            <para count="1">Install M6 harness bracket nut. Tighten nut to
                <hotlnk document="eges3451_343.xml" xrefid="s19.t1">standard torque</hotlnk>
                <xref refid="s19.t1"/>.
            </para>
        </step1>
    </svcproc>
