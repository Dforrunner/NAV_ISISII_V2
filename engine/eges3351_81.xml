    <stitle>International&#174; MaxxForce&#8482; DT, 9 and 10 Engine Service Manual - Engine Electrical - Removal -
        Injection Control Pressure (ICP) Sensor
    </stitle>
    <svcman/>
    <svcproc svcproctype="remove" graphiccount="1">
        <title>Injection Control Pressure (ICP) Sensor</title>
        <step1>
            <para count="1">Remove
                <hotlnk document="eges3351_304.xml" xrefid="s1302">valve cover</hotlnk>
                <xref refid="s1302"/>.
            </para>
        </step1>
        <figure id="f3350003097" figsize="col-wide">
            <graphic filename="../figK09/K09031.webp" type="webp" scalefit="1" scalefitwidth="248px" box="no"/>
            <caption>ICP sensor</caption>
            <calloutgroup>
                <callout1 type="arabic">High-pressure oil manifold</callout1>
                <callout1 type="arabic">ICP sensor</callout1>
            </calloutgroup>
        </figure>
        <step1>
            <para count="1">Disconnect 3-pin UVC harness connector from the ICP sensor, installed in the high-pressure
                oil manifold rear of cylinder 5 fuel injector.
            </para>
        </step1>
        <step1>
            <para count="1">Remove ICP sensor.</para>
        </step1>
        <step1>
            <para count="1">Discard sensor O-ring.</para>
        </step1>
    </svcproc>
