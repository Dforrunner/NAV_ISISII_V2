    <svcman/>
    <svcsubsec id="s11.4">
        <title>Installation</title>
        <svcproc id="s11.4.1" svcproctype="install" graphiccount="2">
            <title>Oil Cooler Cover Assembly</title>
            <figure id="f3450011012" figsize="col-wide">
                <graphic filename="../figM13/M13106.webp" type="webp" scalefit="1" scalefitwidth="248px"
                         scalefitheight="192px" box="no"/>
                <caption>Oil cooler cover gaskets</caption>
                <calloutgroup>
                    <callout1 type="arabic">Oil cooler cover gasket (coolant side)</callout1>
                    <callout1 type="arabic">Oil cooler cover gasket (oil side)</callout1>
                </calloutgroup>
            </figure>
            <step1>
                <para count="1">Install new oil cooler cover gasket (coolant side).</para>
            </step1>
            <step1>
                <para count="1">Install new oil cooler cover gasket (oil side).</para>
            </step1>
            <figure id="f3450011013" figsize="col-wide">
                <graphic filename="../figM13/M13105.webp" type="webp" scalefit="1" scalefitwidth="248px"
                         scalefitheight="192px" box="no"/>
                <caption>Oil cooler cover assembly</caption>
                <calloutgroup>
                    <callout1 type="arabic">M8 x 30 bolt (8)</callout1>
                    <callout1 type="arabic">Oil cooler cover assembly</callout1>
                </calloutgroup>
            </figure>
            <step1>
                <para count="1">Install oil cooler cover assembly and eight M8 x 30 bolts. Tighten bolts to
                    <hotlnk document="eges3451_248.xml" xrefid="s11.t2">special torque</hotlnk>
                    <xref refid="s11.t2"/>.
                </para>
            </step1>
        </svcproc>
