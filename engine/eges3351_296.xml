    <svcproc svcproctype="install" graphiccount="1">
        <title>Drive Belt</title>
        <figure id="f3350012342" figsize="pg-wide">
            <graphic filename="../figK05/K05013.webp" type="webp" scalefit="1" scalefitwidth="312px" box="no"/>
            <caption>Drive belt routing</caption>
            <calloutgroup>
                <callout1 type="arabic">Single Freon&#174; compressor and single idler pulley</callout1>
                <callout1 type="arabic">Without Freon&#174; compressor</callout1>
                <callout1 type="arabic">Dual Freon&#174; compressors and dual idler pulleys</callout1>
            </calloutgroup>
        </figure>
        <step1>
            <para count="1">Install drive belt on all engine pulleys, except one.</para>
        </step1>
        <step1>
            <para count="1">Insert 1/2 inch square drive ratchet or breaker bar into belt tensioner square hole.</para>
        </step1>
        <step1>
            <para count="1">Rotate belt tensioner clockwise.</para>
        </step1>
        <step1>
            <para count="1">Fit drive belt on last pulley and slowly release belt tensioner.</para>
        </step1>
        <step1>
            <para count="1">Inspect each pulley to verify drive belt is properly seated.</para>
        </step1>
    </svcproc>
