    <svcproc graphiccount="0">
        <title>Dual Turbocharger and Exhaust Tubing</title>
        <table id="AppB30003B" tblwidth="pg-wide" type="simple" frame="topbot">
            <tgroup cols="2" colsep="0" rowsep="1">
                <colspec colname="COLSPEC0" colwidth="100.00*"/>
                <colspec colname="COLSPEC1" align="left" colwidth="1.65in"/>
                <spanspec namest="COLSPEC0" nameend="COLSPEC1" spanname="SPAN1"/>
                <tbody>
                    <row>
                        <entry colspan="2" spanname="SPAN1">
                            <para id="PappB30003B">
                                <title>Turbocharger Related Torque Values</title>
                            </para>
                        </entry>
                    </row>
                    <row>
                        <entry colname="COLSPEC0">
                            <para>Air inlet duct hose clamp</para>
                        </entry>
                        <entry colname="COLSPEC1">
                            <para>4 to 5 N&#183;m (36 to 48 lbf&#183;in)</para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <para>Boost control solenoid mounting bolt, M6 x 25</para>
                        </entry>
                        <entry>
                            <para>9 N&#183;m (79 lbf&#183;in)</para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <para>Crossover V-band</para>
                        </entry>
                        <entry>
                            <para>7 N&#183;m (62 lbf&#183;in)</para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <para>EGR cooler inlet V-band clamp</para>
                        </entry>
                        <entry>
                            <para>12 N&#183;m (106 lbf&#183;in)</para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <para>Exhaust tubing bolts (at manifold)
                                <ftnote id="fnAppB3000301">Apply anti-seize compound to bolt threads prior to assembly
                                </ftnote>
                            </para>
                        </entry>
                        <entry>
                            <para>27 N&#183;m (20 lbf&#183;ft)</para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <para>Exhaust tubing bolts (at turbocharger)
                                <ftnote id="fnAppB3000302">Apply anti-seize compound to bolt threads prior to assembly
                                </ftnote>
                            </para>
                        </entry>
                        <entry>
                            <para>49 N&#183;m (36 lbf&#183;ft)</para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <para>Low-pressure turbine exhaust outlet studs (3)</para>
                        </entry>
                        <entry>
                            <para>22 N&#183;m (16 lbf&#183;ft)</para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <para>Oil drain tubing bolts</para>
                        </entry>
                        <entry>
                            <para>23 N&#183;m (17 lbf&#183;ft)</para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <para>Oil fill extension tube</para>
                        </entry>
                        <entry>
                            <para>14 N&#183;m (124 lbf&#183;in)</para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <para>Oil supply tube (fittings)</para>
                        </entry>
                        <entry>
                            <para>17 N&#183;m (150 lbf&#183;in)</para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <para>V-clamp</para>
                        </entry>
                        <entry>
                            <para>10 N&#183;m (88 lbf&#183;in)</para>
                        </entry>
                    </row>
                </tbody>
            </tgroup>
        </table>
