    <torque torquetype="special">
        <table id="t2651402" tblwidth="pg-wide" frame="topbot">
            <title>Engine Brake Special Torques</title>
            <tgroup cols="2">
                <colspec colname="col1" colwidth="1.47*"/>
                <colspec colname="col2" align="justify" colwidth="0.53*"/>
                <spanspec namest="col1" nameend="col2" spanname="SPAN1"/>
                <tbody>
                    <row>
                        <entry>
                            <para>Brake Control Pressure (BCP) sensor</para>
                        </entry>
                        <entry align="justify">
                            <para>20-30 N&#183;m (15-22 lbf&#183;ft)</para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <para>Brake housing bolts (M8 x 90)</para>
                        </entry>
                        <entry align="justify">
                            <para>27 N&#183;m (20 lbf&#183;ft)</para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <para>Brake piston adjustment locknut</para>
                        </entry>
                        <entry align="justify">
                            <para>27 N&#183;m (20 lbf&#183;ft)</para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <para>Brake shutoff solenoid tinnermann nut</para>
                        </entry>
                        <entry align="justify">
                            <para>7-11 N&#183;m (5-8 lbf&#183;lb)</para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <para>Brake shutoff valve</para>
                        </entry>
                        <entry align="justify">
                            <para>34 N&#183;m (25 lbf&#183;ft)</para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <para>Injection Control Pressure (ICP) sensor</para>
                        </entry>
                        <entry align="justify">
                            <para>20-30 N&#183;m (15-22 lbf&#183;ft)</para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <para>Oil pressure relief valve</para>
                        </entry>
                        <entry align="justify">
                            <para>41-48 N&#183;m (30-35 lbf&#183;ft)</para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <para>Rail end plug assembly</para>
                        </entry>
                        <entry align="justify">
                            <para>204 N&#183;m (150 lbf&#183;ft)</para>
                        </entry>
                    </row>
                </tbody>
            </tgroup>
        </table>
