    <stitle>International&#174; MaxxForce&#8482; 7 Engine Service Manual - Fuel System - Removal - Fuel Cooler
        Assembly
    </stitle>
    <svcman/>
    <svcproc id="s07.2.8" svcproctype="remove" graphiccount="3">
        <title>Fuel Cooler Assembly</title>
        <figure id="f3450007042" figsize="col-wide">
            <graphic filename="../figM11/M11137.webp" type="webp" scalefit="1" scalefitwidth="248px"
                     scalefitheight="192px" box="no"/>
            <caption>Fuel cooler assembly coolant hoses</caption>
            <calloutgroup>
                <callout1 type="arabic">M6 nut</callout1>
                <callout1 type="arabic">Clamp</callout1>
                <callout1 type="arabic">Hose clamp (2)</callout1>
                <callout1 type="arabic">Coolant-in hose</callout1>
                <callout1 type="arabic">Coolant-out from fuel cooler hose</callout1>
            </calloutgroup>
        </figure>
        <step1>
            <para count="1">Remove M6 nut and clamp.</para>
        </step1>
        <step1>
            <para count="1">Loosen two hose clamps.</para>
        </step1>
        <step1>
            <para count="1">Disconnect coolant-in hose and coolant-out hose from fuel cooler assembly.</para>
        </step1>
        <figure id="f3450007043" figsize="col-wide">
            <graphic filename="../figM11/M11138.webp" type="webp" scalefit="1" scalefitwidth="248px"
                     scalefitheight="192px" box="no"/>
            <caption>Fuel cooler assembly nuts</caption>
            <calloutgroup>
                <callout1 type="arabic">M8 nut (4)</callout1>
                <callout1 type="arabic">Fuel cooler assembly</callout1>
            </calloutgroup>
        </figure>
        <step1>
            <para count="1">Remove four M8 nuts.</para>
        </step1>
        <step1>
            <para count="1">Remove fuel cooler assembly.</para>
        </step1>
        <figure id="f3450007044" figsize="col-wide">
            <graphic filename="../figM11/M11139.webp" type="webp" scalefit="1" scalefitwidth="248px"
                     scalefitheight="192px" box="no"/>
            <caption>Cooler support bracket assembly</caption>
            <calloutgroup>
                <callout1 type="arabic">M10 x 20 bolt (4)</callout1>
                <callout1 type="arabic">Cooler support bracket assembly</callout1>
            </calloutgroup>
        </figure>
        <step1>
            <para count="1">Remove four M10 x 20 bolts and cooler support bracket assembly.</para>
        </step1>
    </svcproc>
