    <svcproc id="s26510.4.4" svcproctype="clean" graphiccount="1">
        <title>ECM and IDM Assembly</title>
        <step1>
            <para count="1">Inspect rubber seal on harness connector and in ECM and IDM assembly pin recesses.</para>
            <figure id="e3001143" figsize="col-wide">
                <graphic filename="../figD09/D0989.webp" type="webp" scalefit="1" scalefitwidth="248px" box="no"/>
                <caption>ECM and IDM assembly harness pin recesses (IDM shown)</caption>
                <calloutgroup>
                    <callout1 type="arabic">Rubberized seal</callout1>
                    <callout1 type="arabic">Connector pins</callout1>
                </calloutgroup>
            </figure>
        </step1>
        <step1>
            <para count="1">Check for bent pins in ECM and IDM assembly connections.</para>
        </step1>
        <step1>
            <para count="1">Check for bent pins in the EGR drive module connection.</para>
        </step1>
    </svcproc>
