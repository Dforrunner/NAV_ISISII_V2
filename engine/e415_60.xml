    <stitle>DT/DTA-466 Diesel Engine Service (1990) - CYLINDER HEAD AND VALVES - CYLINDER HEAD RECONDITIONING - VALVE
        SPRING LOCKS
    </stitle>
    <svcman/>
    <svcproc svcproctype="clean" graphiccount="0">
        <title>VALVE SPRING LOCKS</title>
        <svcsubproc>
            <title>Cleaning</title>
            <para>Clean valve spring locks in a suitable solvent.</para>
        </svcsubproc>
        <svcsubproc>
            <title>Inspection</title>
            <step1>
                <para count="1">Visually inspect inside and outside of the valve spring locks for wear.</para>
            </step1>
            <step1>
                <para count="1">Replace any worn spring locks, as required.</para>
            </step1>
        </svcsubproc>
    </svcproc>
