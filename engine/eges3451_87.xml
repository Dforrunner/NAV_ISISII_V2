    <svcproc id="s03.5.16" svcproctype="install" graphiccount="1">
        <title>Exhaust Back Pressure (EBP) Sensor</title>
        <figure id="f3450003054" figsize="col-wide">
            <graphic filename="../figM09/M09108.webp" type="webp" scalefit="1" scalefitwidth="248px"
                     scalefitheight="192px" box="no"/>
            <caption>EBP sensor</caption>
        </figure>
        <step1>
            <para count="1">Install EBP sensor. Tighten sensor to
                <hotlnk document="eges3451_90.xml" xrefid="s03.t1">special torque</hotlnk>
                <xref refid="s03.t1"/>.
            </para>
        </step1>
        <step1>
            <para count="1">Connect electrical connector to EBP sensor mounted in EBP tube assembly near breather
                support on right valve cover.
            </para>
        </step1>
    </svcproc>
