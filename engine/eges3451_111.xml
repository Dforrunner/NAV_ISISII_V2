    <stitle>International&#174; MaxxForce&#8482; 7 Engine Service Manual - Variable Geometry Turbocharger (VGT) -
        Removal - Left Exhaust Tube
    </stitle>
    <svcman/>
    <svcproc id="s05.2.2" svcproctype="remove" graphiccount="2">
        <title>Left Exhaust Tube</title>
        <figure id="f3450005002" figsize="col-wide">
            <graphic filename="../figM15/M15101.webp" type="webp" scalefit="1" scalefitwidth="248px"
                     scalefitheight="192px" box="no"/>
            <caption>Left exhaust tube to turbocharger assembly connection</caption>
            <calloutgroup>
                <callout1 type="arabic">M8 x 27 bolt (3)</callout1>
                <callout1 type="arabic">Left exhaust tube</callout1>
            </calloutgroup>
        </figure>
        <step1>
            <para count="1">Remove and discard three M8 x 27 bolts.</para>
        </step1>
        <step1>
            <para count="1">Remove and discard left exhaust tube gasket.</para>
        </step1>
        <figure id="f3450005003" figsize="col-wide">
            <graphic filename="../figM15/M15120.webp" type="webp" scalefit="1" scalefitwidth="248px"
                     scalefitheight="192px" box="no"/>
            <caption>Left exhaust tube to exhaust manifold connection</caption>
            <calloutgroup>
                <callout1 type="arabic">M8 nut (3)</callout1>
                <callout1 type="arabic">Left exhaust tube</callout1>
            </calloutgroup>
        </figure>
        <step1>
            <para count="1">Remove and discard three M8 nuts from left exhaust manifold studs.</para>
        </step1>
        <step1>
            <para count="1">Disconnect and remove left exhaust tube.</para>
        </step1>
        <step1>
            <para count="1">Remove and discard left exhaust tube to manifold gasket.</para>
        </step1>
    </svcproc>
