    </stitle>
    <svcman/>
    <svcproc id="s09.4.6" svcproctype="install" graphiccount="2">
        <title>Fan Drive</title>
        <figure id="f3450009039" figsize="col-wide">
            <graphic filename="../figM05/M05116.webp" type="webp" scalefit="1" scalefitwidth="248px"
                     scalefitheight="192px" box="no"/>
            <caption>Fan and pulley mounting hub</caption>
            <calloutgroup>
                <callout1 type="arabic">M8 x 65 bolt (4)</callout1>
                <callout1 type="arabic">Fan and pulley mounting hub</callout1>
            </calloutgroup>
        </figure>
        <step1>
            <para count="1">Install fan and pulley mounting hub.</para>
        </step1>
        <step1>
            <para count="1">Install four M8&#160;x&#160;65 bolts and tighten to
                <hotlnk document="eges3451_199.xml" xrefid="s09.t2">special torque</hotlnk>
                <xref refid="s09.t2"/>.
            </para>
        </step1>
        <figure id="f3450009040" figsize="col-wide">
            <graphic filename="../figM05/M05115.webp" type="webp" scalefit="1" scalefitwidth="248px"
                     scalefitheight="192px" box="no"/>
            <caption>Fan pulley</caption>
            <calloutgroup>
                <callout1 type="arabic">M8 x 20 bolt (6)</callout1>
                <callout1 type="arabic">Fan pulley</callout1>
            </calloutgroup>
        </figure>
        <step1>
            <para count="1">Install fan pulley.</para>
        </step1>
        <specpara>
            <note>
                <para>Use a holding device to lock fan pulley when installing bolts.</para>
            </note>
        </specpara>
        <step1>
            <para count="1">Install six M8&#160;x&#160;20 bolts and tighten to
                <hotlnk document="eges3451_199.xml" xrefid="s09.t2">special torque</hotlnk>
                <xref refid="s09.t2"/>.
            </para>
        </step1>
    </svcproc>
