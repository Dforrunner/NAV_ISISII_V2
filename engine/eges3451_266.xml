    </stitle>
    <svcman/>
    <svcproc id="s12.4.6" svcproctype="install" graphiccount="2">
        <title>Engine Mount Rear Brackets</title>
        <figure id="f3450012040" figsize="col-wide">
            <graphic filename="../figM10/M10109.webp" type="webp" scalefit="1" scalefitwidth="248px"
                     scalefitheight="192px" box="no"/>
            <caption>Left engine mount rear bracket</caption>
            <calloutgroup>
                <callout1 type="arabic">Pipe clip bracket</callout1>
                <callout1 type="arabic">M12 x 40 bolt (4)</callout1>
                <callout1 type="arabic">Left engine mount rear bracket</callout1>
            </calloutgroup>
        </figure>
        <step1>
            <para count="1">Install left engine mount rear bracket, pipe clip bracket, and four M12&#160;x&#160;40
                bolts. Tighten bolts to
                <hotlnk document="eges3451_267.xml" xrefid="s12.t2">special torque</hotlnk>
                <xref refid="s12.t2"/>.
            </para>
        </step1>
        <figure id="f3450012041" figsize="col-wide">
            <graphic filename="../figM10/M10108.webp" type="webp" scalefit="1" scalefitwidth="248px"
                     scalefitheight="192px" box="no"/>
            <caption>Right engine mount rear bracket</caption>
            <calloutgroup>
                <callout1 type="arabic">Extension clip</callout1>
                <callout1 type="arabic">M12 x 40 bolt (4)</callout1>
                <callout1 type="arabic">Right engine mount rear bracket</callout1>
            </calloutgroup>
        </figure>
        <step1>
            <para count="1">Install right engine mount rear bracket, extension clip, and four M12&#160;x&#160;40 bolts.
                Tighten bolts to
                <hotlnk document="eges3451_267.xml" xrefid="s12.t2">special torque</hotlnk>
                <xref refid="s12.t2"/>.
            </para>
        </step1>
    </svcproc>
