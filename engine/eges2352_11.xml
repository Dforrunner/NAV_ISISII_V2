            <graphic filename="../figD31/D31185.webp" type="webp" scalefit="1" scalefitwidth="312px" box="no"/>
            <caption>Figure 20. Engine oil flow (oil cooler cover and oil filter base)</caption>
            <calloutgroup>
                <callout1 type="arabic">VGT oil supply tube assembly</callout1>
                <callout1 type="arabic">Oil filter housing</callout1>
                <callout1 type="arabic">Oil filter base assembly</callout1>
