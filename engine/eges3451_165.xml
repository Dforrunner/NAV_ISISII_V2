    <stitle>International&#174; MaxxForce&#8482; 7 Engine Service Manual - Intake and Exhaust Manifolds - Removal -
        Service Procedure
    </stitle>
    <svcman/>
    <svcproc id="s08.2.3" svcproctype="remove" graphiccount="6">
        <title>Service Procedure</title>
        <svcsubproc id="s08.2.3.1">
            <title>Left Exhaust Manifold</title>
            <figure id="f3450008003" figsize="col-wide">
                <graphic filename="../figM14/M14104.webp" type="webp" scalefit="1" scalefitwidth="248px"
                         scalefitheight="192px" box="no"/>
                <caption>Left exhaust manifold heat shield</caption>
                <calloutgroup>
                    <callout1 type="arabic">M8 nut</callout1>
                    <callout1 type="arabic">M8 x 12 bolt (3)</callout1>
                    <callout1 type="arabic">Heat shield</callout1>
                </calloutgroup>
            </figure>
            <step1>
                <para count="1">Remove and discard three M8 x 12 heat shield bolts and M8 heat shield nut.</para>
            </step1>
            <step1>
                <para count="1">Remove left exhaust manifold heat shield.</para>
                <figure id="f3450008004" figsize="col-wide">
                    <graphic filename="../figM14/M14105.webp" type="webp" scalefit="1" scalefitwidth="248px"
                             scalefitheight="192px" box="no"/>
                    <caption>Left exhaust manifold heat shield spacers</caption>
                </figure>
            </step1>
            <step1>
                <para count="1">Remove three left exhaust manifold heat shield threaded spacers.</para>
            </step1>
            <figure id="f3450008005" figsize="col-wide">
                <graphic filename="../figM14/M14106.webp" type="webp" scalefit="1" scalefitwidth="248px"
                         scalefitheight="192px" box="no"/>
                <caption>Left exhaust manifold</caption>
                <calloutgroup>
                    <callout1 type="arabic">M8 x 40 stud bolt (4)</callout1>
                    <callout1 type="arabic">M8 x 40 bolt (4)</callout1>
                    <callout1 type="arabic">Left exhaust manifold</callout1>
                </calloutgroup>
            </figure>
            <step1>
                <para count="1">Remove and discard four M8 x 40 exhaust manifold bolts and four M8 x 40 exhaust manifold
                    stud bolts.
                </para>
            </step1>
            <step1>
                <para count="1">Remove left exhaust manifold and discard gasket.</para>
            </step1>
        </svcsubproc>
        <svcsubproc id="s08.2.3.2">
            <title>Right Exhaust Manifold</title>
            <figure id="f3450008006" figsize="col-wide">
                <graphic filename="../figM14/M14109.webp" type="webp" scalefit="1" scalefitwidth="248px"
                         scalefitheight="192px" box="no"/>
                <caption>Right exhaust manifold heat shield</caption>
                <calloutgroup>
                    <callout1 type="arabic">M8 x 12 bolt (3)</callout1>
                    <callout1 type="arabic">M8 nut</callout1>
                    <callout1 type="arabic">Heat shield</callout1>
                </calloutgroup>
            </figure>
            <step1>
                <para count="1">Remove and discard three M8 x 12 heat shield bolts and M8 heat shield nut.</para>
            </step1>
            <step1>
                <para count="1">Remove right exhaust manifold heat shield.</para>
            </step1>
            <figure id="f3450008007" figsize="col-wide">
                <graphic filename="../figM14/M14110.webp" type="webp" scalefit="1" scalefitwidth="248px"
                         scalefitheight="192px" box="no"/>
                <caption>Right exhaust manifold heat shield spacers</caption>
            </figure>
            <step1>
                <para count="1">Remove three right exhaust manifold heat shield threaded spacers.</para>
            </step1>
            <figure id="f3450008008" figsize="col-wide">
                <graphic filename="../figM14/M14111.webp" type="webp" scalefit="1" scalefitwidth="248px"
                         scalefitheight="192px" box="no"/>
                <caption>Right exhaust manifold</caption>
                <calloutgroup>
                    <callout1 type="arabic">M8 x 40 bolt (4)</callout1>
                    <callout1 type="arabic">M8 x 40 stud bolt (4)</callout1>
                    <callout1 type="arabic">Right exhaust manifold</callout1>
                </calloutgroup>
            </figure>
            <step1>
                <para count="1">Remove and discard four M8 x 40 exhaust manifold bolts and four M8 x 40 exhaust manifold
                    stud bolts.
                </para>
            </step1>
            <step1>
                <para count="1">Remove right exhaust manifold and discard gasket.</para>
            </step1>
        </svcsubproc>
    </svcproc>
