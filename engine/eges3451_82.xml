    <svcproc id="s03.5.11" svcproctype="install" graphiccount="1">
        <title>Fuel Heater</title>
        <figure id="f3450003049" figsize="col-wide">
            <graphic filename="../figM09/M09130.webp" type="webp" scalefit="1" scalefitwidth="248px"
                     scalefitheight="192px" box="no"/>
            <caption>Bowl assembly with fuel heater/probe</caption>
        </figure>
        <specpara>
            <note>
                <para>Fuel heater and bowl assembly must be replaced as an assembly.</para>
            </note>
        </specpara>
        <step1>
            <para count="1">Install a new bowl primary filter seal onto bowl assembly.</para>
        </step1>
        <step1>
            <para count="1">Install bowl assembly and hand tighten firmly.</para>
        </step1>
        <step1>
            <para count="1">Connect electrical connector to bowl assembly.</para>
        </step1>
        <step1>
            <para count="1">Install new O-ring on WIF sensor and lubricate with clean engine oil.</para>
        </step1>
        <step1>
            <para count="1">Install WIF sensor.</para>
        </step1>
        <step1>
            <para count="1">Connect electrical connector to WIF sensor.</para>
        </step1>
    </svcproc>
