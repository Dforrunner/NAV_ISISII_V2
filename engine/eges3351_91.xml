    <svcproc svcproctype="install" graphiccount="1">
        <title>Crankshaft Position (CKP) Sensor</title>
        <figure id="f3350003106" figsize="col-wide">
            <graphic filename="../figK09/K09020.webp" type="webp" scalefit="1" scalefitwidth="248px" box="no"/>
            <caption>CKP sensor</caption>
        </figure>
        <step1>
            <para id="s0327" count="1">Install new O-rings on the CKP sensor.</para>
        </step1>
        <step1>
            <para count="1">Install CKP sensor into the flywheel housing.</para>
        </step1>
        <step1>
            <para count="1">Install M6 x 16 retaining bolt and tighten to
                <hotlnk document="eges3351_SAPPB01.xml" xrefid="sAppB01">standard torque</hotlnk>
                <xref refid="sAppB01"/>.
            </para>
        </step1>
        <step1>
            <para count="1">Connect sensor harness connector to CKP sensor.</para>
        </step1>
    </svcproc>
