    <svcproc id="s03.5.5" svcproctype="install" graphiccount="1">
        <title>Glow Plug Relay</title>
        <figure id="f3450003043" figsize="col-wide">
            <graphic filename="../figM09/M09119.webp" type="webp" scalefit="1" scalefitwidth="248px"
                     scalefitheight="192px" box="no"/>
            <caption>Glow plug relay</caption>
            <calloutgroup>
                <callout1 type="arabic">Glow plug relay nuts</callout1>
                <callout1 type="arabic">Battery (+) cable nut</callout1>
                <callout1 type="arabic">Glow plug harness nut</callout1>
                <callout1 type="arabic">Glow plug relay control connector</callout1>
            </calloutgroup>
        </figure>
        <step1>
            <para count="1">Install glow plug relay and nuts. Tighten nuts to
                <hotlnk document="eges3451_343.xml" xrefid="s19.t1">standard torque</hotlnk>
                <xref refid="s19.t1"/>.
            </para>
        </step1>
        <step1>
            <para count="1">Connect electrical connections to glow plug relay. Install and tighten nuts to
                <hotlnk document="eges3451_343.xml" xrefid="s19.t1">standard torque</hotlnk>
                <xref refid="s19.t1"/>.
            </para>
        </step1>
        <step1>
            <para count="1">Connect ground (-) cable to battery.</para>
        </step1>
