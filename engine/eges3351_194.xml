                <calloutgroup>
                    <callout1 type="arabic">Brake actuator piston screw</callout1>
                    <callout1 type="arabic">Brake actuator piston locknut</callout1>
                    <callout1 type="arabic">Valve bridge</callout1>
                    <callout1 type="arabic">Feeler gauge</callout1>
                </calloutgroup>
