<isis lang="en">
    <stitle>Procedural Guideline - RADIATOR ASSEMBLY; REPLACE</stitle>
    <wtsproc id="f09-105" wtscode="F09-105" group="09">
        <wtsdescrip>RADIATOR ASSEMBLY; REPLACE</wtsdescrip>
        <model>9000i CONV</model>
        <modelyr>2008</modelyr>
        <engine>Any</engine>
        <tran>Any</tran>
        <config>Equipped with Keysor Fan Clutch</config>
        <svcproc svcproctype="remove" graphiccount="0">
            <title>REMOVE</title>
            <step1>
                <para count="1">Install wheel chocks, remove radiator grill and open hood</para>
            </step1>
            <step1>
                <para count="1">Remove front bumper assembly</para>
            </step1>
            <step1>
                <para count="1">Drain cooling system</para>
            </step1>
            <step1>
                <para count="1">Disconnect hood tilt assist shock and springs from radiator and support hood</para>
                <specpara>
                    <note>
                        <para>May require two people</para>
                    </note>
                </specpara>
            </step1>
            <step1>
                <para count="1">Disconnect both charge air cooler hoses from charge air cooler</para>
            </step1>
            <step1>
                <para count="1">Disconnect surge tank from charge air cooler and secure out of the way</para>
            </step1>
            <step1>
                <para count="1">Remove upper section of 2-piece fan shroud and remove all bolts retaining lower section
                    to charge air cooler
                </para>
            </step1>
            <step1>
                <para count="1">Reposition A/C condenser (if equipped)</para>
                <specpara>
                    <note>
                        <para>Do not open the A/C system</para>
                    </note>
                </specpara>
            </step1>
            <step1>
                <para count="1">Remove right &#38; left recirculation seal bolts which retain the seal to the charge air
                    cooler
                </para>
            </step1>
            <step1>
                <para count="1">Remove charge air cooler</para>
                <specpara>
                    <note>
                        <para>May require two people</para>
                    </note>
                </specpara>
            </step1>
            <step1>
                <para count="1">Disconnect the de-airation hose from the radiator and remove the fitting</para>
            </step1>
            <step1>
                <para count="1">Disconnect both radiator stay rods from radiator</para>
            </step1>
            <step1>
                <para count="1">Remove cooling fan blade</para>
            </step1>
            <step1>
                <para count="1">Remove lower section of 2-piece fan shroud</para>
            </step1>
            <step1>
                <para count="1">Disconnect right &#38; left radiator hoses from radiator</para>
            </step1>
            <step1>
                <para count="1">Remove left &#38; right side recirculation seals</para>
            </step1>
            <step1>
                <para count="1">Disconnect power steering reservoir and hoses from radiator</para>
                <specpara>
                    <note>
                        <para>Do not open power steering system</para>
                    </note>
                </specpara>
            </step1>
            <step1>
                <para count="1">Disconnect transmission oil cooler and hoses from radiator</para>
            </step1>
            <step1>
                <para count="1">Remove radiator assembly mount nuts and remove radiator from vehicle</para>
                <specpara>
                    <note>
                        <para>Requires 2 people or lifting device</para>
                    </note>
                </specpara>
            </step1>
            <step1>
                <para count="1">Remove radiator core from radiator frame</para>
            </step1>
        </svcproc>
        <svcproc svcproctype="install" graphiccount="0">
            <title>INSTALL</title>
            <step1>
                <para count="1">Install radiator core to radiator frame</para>
            </step1>
            <step1>
                <para count="1">Install radiator assembly to vehicle and install mount nuts</para>
                <specpara>
                    <note>
                        <para>Requires 2 people or lifting device</para>
                    </note>
                </specpara>
            </step1>
            <step1>
                <para count="1">Connect transmission oil cooler and hoses to radiator frame</para>
            </step1>
            <step1>
                <para count="1">Connect power steering reservoir and hoses to radiator frame</para>
            </step1>
            <step1>
                <para count="1">Install left &#38; right side recirculation seals</para>
            </step1>
            <step1>
                <para count="1">Connect both radiator hoses to radiator</para>
            </step1>
            <step1>
                <para count="1">Install lower section of 2-piece fan shroud</para>
            </step1>
            <step1>
                <para count="1">Install fan blade assembly</para>
            </step1>
            <step1>
                <para count="1">Install de-airation fitting to radiator and connect hose</para>
            </step1>
            <step1>
                <para count="1">Connect both radiator stay rods to radiator</para>
            </step1>
            <step1>
                <para count="1">Install charge air cooler and all remaining recirculation seal bolts</para>
                <specpara>
                    <note>
                        <para>May require two people</para>
                    </note>
                </specpara>
            </step1>
            <step1>
                <para count="1">Position A/C condenser (if equipped)</para>
            </step1>
            <step1>
                <para count="1">Install upper section of 2-piece fan shroud and install bolts retaining lower section to
                    charge air cooler
                </para>
            </step1>
            <step1>
                <para count="1">Connect surge tank to charge air cooler</para>
            </step1>
            <step1>
                <para count="1">Fill cooling system and check for leaks</para>
            </step1>
            <step1>
                <para count="1">Connect both charge air cooler hoses to charge air cooler</para>
            </step1>
            <step1>
                <para count="1">Connect hood tilt assist shock and springs to radiator</para>
                <specpara>
                    <note>
                        <para>May require 2 people</para>
                    </note>
                </specpara>
            </step1>
            <step1>
                <para count="1">Install front bumper assembly</para>
            </step1>
            <step1>
                <para count="1">Close hood assembly, install radiator grill and remove wheel chocks</para>
            </step1>
        </svcproc>
    </wtsproc>
</isis>
