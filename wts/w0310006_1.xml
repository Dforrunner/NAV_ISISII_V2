<isis lang="en">
    <stitle>Procedural Guideline - REAR SPRING MOUNTING BRACKET (FRONT), REPLACE</stitle>
    <wtsproc id="w0310006" wtscode="A03-370" group="03">
        <wtsdescrip>REAR SPRING MOUNTING BRACKET (FRONT), REPLACE</wtsdescrip>
        <model>1000</model>
        <modelyr>1996</modelyr>
        <engine>T 444E</engine>
        <tran>International 6+1</tran>
        <config>RPS Model</config>
        <svcproc svcproctype="remove" graphiccount="0">
            <title>REMOVE</title>
            <step1>
                <para count="1">Chock wheels.</para>
            </step1>
            <step1>
                <para count="1">Raise vehicle support with frame stands.</para>
            </step1>
            <step1>
                <para count="1">Remove rear dual wheels.</para>
            </step1>
            <step1>
                <para count="1">Remove front rebound pin.</para>
            </step1>
            <step1>
                <para count="1">Use jack and raise/lower axle. Remove eye bolt from hanger/spring.</para>
            </step1>
            <step1>
                <para count="1">Remove exhaust support hanger at frame. Loosen clamp and reposition hanger for access.
                </para>
            </step1>
            <step1>
                <para count="1">Remove bolts retaining spring hanger.</para>
            </step1>
            <step1>
                <para count="1">Raise/lower axle and remove hanger.</para>
            </step1>
        </svcproc>
        <svcproc svcproctype="install" graphiccount="0">
            <title>INSTALL</title>
            <step1>
                <para count="1">Raise/lower axle and install hanger.</para>
            </step1>
            <step1>
                <para count="1">Install retaining spring hanger bolts and torque bolts.</para>
            </step1>
            <step1>
                <para count="1">Reposition exhaust hanger and tighten clamps.</para>
            </step1>
            <step1>
                <para count="1">Install rebound pin.</para>
            </step1>
            <step1>
                <para count="1">Install rear dual wheels and torque nuts.</para>
            </step1>
            <step1>
                <para count="1">Lower vehicle.</para>
            </step1>
            <step1>
                <para count="1">Remove wheel chocks.</para>
            </step1>
        </svcproc>
    </wtsproc>
</isis>
