<isis lang="en">
    <stitle>Procedural Guideline - REMOVE AND RE-INSTALL OR REPLACE REAR SPRING ASSEMBLY</stitle>
    <wtsproc id="w0310005" wtscode="A03-270" group="03">
        <wtsdescrip>REMOVE AND RE-INSTALL OR REPLACE REAR SPRING ASSEMBLY</wtsdescrip>
        <model>1000</model>
        <modelyr>1996</modelyr>
        <engine>T 444E</engine>
        <tran>International 6+1</tran>
        <config>RPS Model</config>
        <svcproc svcproctype="remove" graphiccount="0">
            <title>REMOVE</title>
            <step1>
                <para count="1">Chock wheels.</para>
            </step1>
            <step1>
                <para count="1">Raise vehicle support with frame stands.</para>
            </step1>
            <step1>
                <para count="1">Remove rear dual wheels.</para>
            </step1>
            <step1>
                <para count="1">Remove both rebound pins.</para>
            </step1>
            <step1>
                <para count="1">Use floor jack support axle.</para>
            </step1>
            <step1>
                <para count="1">Remove U-bolts.</para>
            </step1>
            <step1>
                <para count="1">Use bottle jack to raise/lower eye spring, leaf. Remove eye bolt.</para>
            </step1>
            <step1>
                <para count="1">Raise/lower axle and remove spring assembly.</para>
            </step1>
        </svcproc>
        <svcproc svcproctype="install" graphiccount="0">
            <title>INSTALL</title>
            <step1>
                <para count="1">Install spring assembly and raise/lower axle.</para>
            </step1>
            <step1>
                <para count="1">Install eye bolt and torque. Remove bottle jack.</para>
            </step1>
            <step1>
                <para count="1">Install U-bolts and torque bolts.</para>
            </step1>
            <step1>
                <para count="1">Install rebound pins.</para>
            </step1>
            <step1>
                <para count="1">Install rear dual wheels and torque bolts.</para>
            </step1>
            <step1>
                <para count="1">Lower vehicle.</para>
            </step1>
            <step1>
                <para count="1">Remove wheel chocks.</para>
            </step1>
        </svcproc>
    </wtsproc>
</isis>
