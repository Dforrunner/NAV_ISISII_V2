<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="../isisxsl.xsl"?>
<isis lang="en">
    <stitle>Procedural Guideline - OIL COOLER HOUSING AND/OR GASKET (I-6 ENGINES); REPLACE</stitle>
    <wtsproc id="A12-3291" wtscode="A12-3291" group="12">
        <wtsdescrip>OIL COOLER HOUSING AND/OR GASKET (I-6 ENGINES); REPLACE</wtsdescrip>
        <model>FE300</model>
        <modelyr>2005</modelyr>
        <engine>DT466E/570E</engine>
        <tran>ANY</tran>
        <config></config>
        <svcproc svcproctype="remove" graphiccount="0">
            <title>REMOVE</title>
            <step1>
                <para count="1">Install wheel chocks</para>
            </step1>
            <step1>
                <para count="1">Remove engine oil cooler drain plug and drain cooling system.</para>
            </step1>
            <step1>
                <para count="1">Remove oil filter element.</para>
            </step1>
            <step1>
                <para count="1">Disconnect turbocharger oil supply hose from oil cooler housing.</para>
            </step1>
            <step1>
                <para count="1">Remove engine oil cooler housing.</para>
            </step1>
        </svcproc>
        <svcproc svcproctype="install" graphiccount="0">
            <title>INSTALL</title>
            <step1>
                <para count="1">Clean crankcase mating surface.</para>
            </step1>
            <step1>
                <para count="1">Transfer engine oil cooler, thermal valve, oil pressure regulator, &#38; oil filter
                    adapter to new oil cooler housing (if necessary).
                </para>
            </step1>
            <step1>
                <para count="1">Install engine oil cooler housing.</para>
            </step1>
            <step1>
                <para count="1">Connect turbocharger oil supply hose to oil cooler housing.</para>
            </step1>
            <step1>
                <para count="1">Install oil filter element.</para>
            </step1>
            <step1>
                <para count="1">Fill cooling system.</para>
            </step1>
            <step1>
                <para count="1">Remove wheel chocks.</para>
            </step1>
        </svcproc>
    </wtsproc>
</isis>
