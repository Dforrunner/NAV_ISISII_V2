<isis lang="en">
    <stitle>Procedural Guideline - REMOVE AND RE-INSTALL OR REPLACE FRONT SPRING ASSEMBLY</stitle>
    <wtsproc id="w0310004" wtscode="A03-100" group="03">
        <wtsdescrip>REMOVE AND RE-INSTALL OR REPLACE FRONT SPRING ASSEMBLY</wtsdescrip>
        <model>1000</model>
        <modelyr>1996</modelyr>
        <engine>T 444E</engine>
        <tran>International 6+1</tran>
        <config>RPS Model</config>
        <svcproc svcproctype="remove" graphiccount="0">
            <title>REMOVE</title>
            <step1>
                <para count="1">Chock wheels.</para>
            </step1>
            <step1>
                <para count="1">Disconnect hood support shocks and raise hood support for access.</para>
            </step1>
            <step1>
                <para count="1">Raise vehicle support with frame stands.</para>
            </step1>
            <step1>
                <para count="1">Use floor support axle.</para>
            </step1>
            <step1>
                <para count="1">Remove U-bolts.</para>
            </step1>
            <step1>
                <para count="1">Remove front eye bolt.</para>
            </step1>
            <step1>
                <para count="1">Remove rear eye bolt from spring.</para>
            </step1>
            <step1>
                <para count="1">Raise/lower axle and remove front spring.</para>
            </step1>
        </svcproc>
        <svcproc svcproctype="install" graphiccount="0">
            <title>INSTALL</title>
            <step1>
                <para count="1">Install front spring and raise/lower axle.</para>
            </step1>
            <step1>
                <para count="1">Install rear spring eye bolt and torque.</para>
            </step1>
            <step1>
                <para count="1">Raise/lower axle. Install front eye bolt and torque bolt.</para>
            </step1>
            <step1>
                <para count="1">Install U-bolts and torque nuts.</para>
            </step1>
            <step1>
                <para count="1">Lower vehicle from frame stands.</para>
            </step1>
            <step1>
                <para count="1">Connect hood support shocks.</para>
            </step1>
            <step1>
                <para count="1">Remove wheel chocks.</para>
            </step1>
        </svcproc>
    </wtsproc>
</isis>
