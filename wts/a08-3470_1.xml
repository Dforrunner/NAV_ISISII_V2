<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="../isisxsl.xsl"?>
<isis lang="en">
    <stitle>Procedural Guideline - CLOCK SPRING (STEERING WHEEL CONTROLS); REPLACE</stitle>
    <wtsproc id="a08-3470" wtscode="A08-3470" group="08">
        <wtsdescrip>CLOCK SPRING (STEERING WHEEL CONTROLS); REPLACE</wtsdescrip>
        <model>4200</model>
        <model>4300</model>
        <model>4400</model>
        <model>7000</model>
        <model>8000</model>
        <modelyr>2001</modelyr>
        <engine>Any</engine>
        <tran>Any</tran>
        <config></config>
        <svcproc svcproctype="remove" graphiccount="0">
            <title>REMOVE</title>
            <step1>
                <para count="1">Install wheel chocks.</para>
                <specpara>
                    <note>
                        <para>Insure front tires are straight.</para>
                    </note>
                </specpara>
            </step1>
            <step1>
                <para count="1">Remove steering column covers.</para>
            </step1>
            <step1>
                <para count="1">Remove horn button, include disconnect wiring.</para>
                <specpara>
                    <note>
                        <para>Use special tool or philips screwdriver.</para>
                    </note>
                </specpara>
            </step1>
            <step1>
                <para count="1">Remove steering wheel nut.</para>
            </step1>
            <step1>
                <para count="1">Mark steering wheel in relation to column shaft.</para>
            </step1>
            <step1>
                <para count="1">Disconnect cruise control system wiring harness (and air horn if applicable) at steering
                    wheel.
                </para>
            </step1>
            <step1>
                <para count="1">Remove steering wheel using puller.</para>
            </step1>
            <step1>
                <para count="1">Disconnect clock spring wiring (both connections).</para>
            </step1>
            <step1>
                <para count="1">Remove clock spring.</para>
            </step1>
        </svcproc>
        <svcproc svcproctype="install" graphiccount="0">
            <title>INSTALL</title>
            <step1>
                <para count="1">Install clock spring per label instructions or service manual.</para>
            </step1>
            <step1>
                <para count="1">Connect clock spring wiring (both connections).</para>
            </step1>
            <step1>
                <para count="1">Install steering wheel.</para>
                <specpara>
                    <note>
                        <para>Align marks from previous step.</para>
                    </note>
                </specpara>
            </step1>
            <step1>
                <para count="1">Install steering wheel nut at steering wheel, torque to spec.</para>
            </step1>
            <step1>
                <para count="1">Connect cruise control system wiring harness (and air horn if applicable) at steering
                    wheel.
                </para>
            </step1>
            <step1>
                <para count="1">Install horn button, include connect wiring.</para>
            </step1>
            <step1>
                <para count="1">Install steering column covers.</para>
            </step1>
            <step1>
                <para count="1">Remove wheel chocks.</para>
            </step1>
        </svcproc>
    </wtsproc>
</isis>
