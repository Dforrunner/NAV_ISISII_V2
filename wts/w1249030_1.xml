<?xml-stylesheet type="text/xsl" href="../isisxsl.xsl"?>
<isis lang="en">
    <stitle>Procedural Guideline - OIL PAN AND/OR GASKET (I-6), REPLACE</stitle>
    <wtsproc id="w1249030" wtscode="A12-1220" group="12">
        <wtsdescrip>OIL PAN AND/OR GASKET (I-6), REPLACE</wtsdescrip>
        <model>4900</model>
        <model>3800</model>
        <model>3600</model>
        <model>3000</model>
        <modelyr>1995</modelyr>
        <engine>DT 466</engine>
        <tran>Spicer 6 Speed</tran>
        <config></config>
        <svcproc svcproctype="remove" graphiccount="0">
            <title>REMOVE</title>
            <step1>
                <para count="1">Drain crankcase oil.</para>
            </step1>
            <step1>
                <para count="1">Remove oil pan retaining bolts and spacers.</para>
            </step1>
            <step1>
                <para count="1">Remove oil pan.</para>
            </step1>
            <step1>
                <para count="1">Clean oil pan and gasket surfaces.</para>
            </step1>
        </svcproc>
        <svcproc svcproctype="install" graphiccount="0">
            <title>INSTALL</title>
            <step1>
                <para count="1">Install new gasket and apply sealer.</para>
            </step1>
            <step1>
                <para count="1">Position oil pan under crankcase.</para>
            </step1>
            <step1>
                <para count="1">Install retaining bolts and spacers.</para>
            </step1>
            <step1>
                <para count="1">Torque retaining bolts in proper sequence.</para>
            </step1>
        </svcproc>
    </wtsproc>
</isis>
