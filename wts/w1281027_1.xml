<?xml-stylesheet type="text/xsl" href="../isisxsl.xsl"?>
<isis lang="en">
    <stitle>Procedural Guideline - VALVE COVER/INTAKE MANIFOLD AND/OR GASKET (I-6), REPLACE</stitle>
    <wtsproc id="w1281027" wtscode="A12-190" group="12">
        <wtsdescrip>VALVE COVER/INTAKE MANIFOLD AND/OR GASKET (I-6), REPLACE</wtsdescrip>
        <model>8100</model>
        <modelyr>1993</modelyr>
        <engine>DT 466</engine>
        <config></config>
        <svcproc svcproctype="remove" graphiccount="0">
            <title>REMOVE</title>
            <step1>
                <para count="1">Open hood.</para>
            </step1>
            <step1>
                <para count="1">Drain cooling system.</para>
            </step1>
            <step1>
                <para count="1">Remove throttle control cable at charge air mount bracket.</para>
            </step1>
            <step1>
                <para count="1">Remove all surge tank hoses.</para>
            </step1>
            <step1>
                <para count="1">Remove surge tank.</para>
            </step1>
            <step1>
                <para count="1">Remove charge air hose assembly.</para>
            </step1>
            <step1>
                <para count="1">Remove water pump tube assembly.</para>
            </step1>
            <step1>
                <para count="1">Remove serpentine belt.</para>
            </step1>
            <step1>
                <para count="1">Remove belt tensioner.</para>
            </step1>
            <step1>
                <para count="1">Remove A/C compressor from mounting bracket (do not disconnect A/C lines), and lay
                    aside.
                </para>
            </step1>
            <step1>
                <para count="1">Remove A/C compressor mounting bracket and secure compressor out of the way for access
                    to valve cover.
                </para>
            </step1>
            <step1>
                <para count="1">Remove air compressor intake hose at compressor; include all brackets.</para>
            </step1>
            <step1>
                <para count="1">Remove engine cover inside cab.</para>
            </step1>
            <step1>
                <para count="1">Remove wiring harness brackets, with wiring still attached to brackets.</para>
            </step1>
            <step1>
                <para count="1">Disconnect wiring for access to remove cover.</para>
            </step1>
            <step1>
                <para count="1">Remove cover breather tube; include mount brackets.</para>
            </step1>
            <step1>
                <para count="1">Remove aneroid line at valve cover.</para>
            </step1>
            <step1>
                <para count="1">Remove valve cover retaining screws.</para>
            </step1>
            <step1>
                <para count="1">Remove valve cover/intake manifold from rear of engine.</para>
            </step1>
            <step1>
                <para count="1">Cover air intake ports.</para>
            </step1>
            <step1>
                <para count="1">Remove valve cover gasket and clean surface.</para>
            </step1>
        </svcproc>
        <svcproc svcproctype="install" graphiccount="0">
            <title>INSTALL</title>
            <step1>
                <para count="1">Install valve cover gasket.</para>
            </step1>
            <step1>
                <para count="1">Remove covers from intake ports and install valve cover/intake manifold.</para>
            </step1>
            <step1>
                <para count="1">Install valve cover retaining screws.</para>
            </step1>
            <step1>
                <para count="1">Install aneroid line at valve cover.</para>
            </step1>
            <step1>
                <para count="1">Install valve cover breather tube and mounting bracket.</para>
            </step1>
            <step1>
                <para count="1">Connect wiring and install wiring harness and brackets..</para>
            </step1>
            <step1>
                <para count="1">Install engine cover in cab.</para>
            </step1>
            <step1>
                <para count="1">Install air compressor intake hose at compressor; include brackets.</para>
            </step1>
            <step1>
                <para count="1">Install A/C mounting bracket.</para>
            </step1>
            <step1>
                <para count="1">Install and secure A/C compressor to mounting bracket.</para>
            </step1>
            <step1>
                <para count="1">Install auto belt tensioner.</para>
            </step1>
            <step1>
                <para count="1">Install serpentine belt.</para>
            </step1>
            <step1>
                <para count="1">Install water pump tube assembly.</para>
            </step1>
            <step1>
                <para count="1">Install charge air hose assembly.</para>
            </step1>
            <step1>
                <para count="1">Install surge tank.</para>
            </step1>
            <step1>
                <para count="1">Install surge tank hoses.</para>
            </step1>
            <step1>
                <para count="1">Install throttle control cable at charge air mounting bracket.</para>
            </step1>
            <step1>
                <para count="1">Fill cooling system.</para>
            </step1>
            <step1>
                <para count="1">Close hood.</para>
            </step1>
        </svcproc>
    </wtsproc>
</isis>
