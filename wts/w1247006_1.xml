<isis lang="en">
    <stitle>Procedural Guideline - ECM OR VPM (WITHOUT DIAMOND LOGIC ECM), REPLACE</stitle>
    <wtsproc id="w1247006" wtscode="A12-1050" group="12">
        <wtsdescrip>ECM OR VPM (WITHOUT DIAMOND LOGIC ECM), REPLACE</wtsdescrip>
        <model>4700</model>
        <modelyr>1996</modelyr>
        <engine>T 444E</engine>
        <tran>Automatic</tran>
        <config></config>
        <svcproc svcproctype="remove" graphiccount="0">
            <title>REMOVE</title>
            <step1>
                <para count="1">Chock wheels.</para>
            </step1>
            <step1>
                <para count="1">Disconnect batteries.</para>
            </step1>
            <step1>
                <para count="1">Remove junction box cover and disconnect electrical connection at cowl.</para>
            </step1>
            <step1>
                <para count="1">Disconnect fuse panel assembly and lay aside.</para>
            </step1>
            <step1>
                <para count="1">Remove support bracket for fuse panel.</para>
            </step1>
            <step1>
                <para count="1">Remove ECM support bracket and ECM.</para>
            </step1>
            <step1>
                <para count="1">If replacing the VPM, remove VPM from side cowl panel; include disconnect wiring
                    connection at VPM.
                </para>
            </step1>
        </svcproc>
        <svcproc svcproctype="install" graphiccount="0">
            <title>INSTALL</title>
            <step1>
                <para count="1">If VPM was replaced, install VPM at side cowl panel and connect wiring at VPM.</para>
            </step1>
            <step1>
                <para count="1">Install ECM support bracket and ECM.</para>
            </step1>
            <step1>
                <para count="1">Install fuse panel support bracket.</para>
            </step1>
            <step1>
                <para count="1">Position and connect fuse panel assembly.</para>
            </step1>
            <step1>
                <para count="1">Connect electrical connection at cowl and install junction box cover.</para>
            </step1>
            <step1>
                <para count="1">Connect batteries.</para>
            </step1>
            <step1>
                <para count="1">Remove wheel chocks.</para>
            </step1>
        </svcproc>
    </wtsproc>
</isis>
