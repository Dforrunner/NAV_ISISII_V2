<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="../isisxsl.xsl"?>
<isis lang="en">
    <stitle>Procedural Guideline - DIAMOND LOGIC ECM; REPLACE</stitle>
    <wtsproc id="A12-3055" wtscode="A12-3055" group="12">
        <wtsdescrip>DIAMOND LOGIC ECM; REPLACE</wtsdescrip>
        <model>4300</model>
        <model>4400</model>
        <modelyr>2001</modelyr>
        <engine>DT466E, 530E</engine>
        <tran>Manual</tran>
        <config></config>
        <svcproc svcproctype="remove" graphiccount="0">
            <title>REMOVE</title>
            <step1>
                <para count="1">Install wheel chocks</para>
            </step1>
            <step1>
                <para count="1">Open hood</para>
            </step1>
            <step1>
                <para count="1">Disconnect battery to ground cable, includes ECM ground</para>
            </step1>
            <step1>
                <para count="1">Remove left quarter fender</para>
            </step1>
            <step1>
                <para count="1">Disconnect engine wiring &#38; connectors from Diamond Logic ECM.</para>
            </step1>
            <step1>
                <para count="1">Remove Electronic Control Module (ECM) from mount bracket</para>
            </step1>
        </svcproc>
        <svcproc svcproctype="install" graphiccount="0">
            <title>INSTALL</title>
            <step1>
                <para count="1">Install Electronic Control Module (ECM) to mount bracket</para>
            </step1>
            <step1>
                <para count="1">Connect engine wiring and connectors to ECM. Include apply di-electric grease to wire
                    cavities. Torque to spec.
                </para>
            </step1>
            <step1>
                <para count="1">Install left quarter fender</para>
            </step1>
            <step1>
                <para count="1">Connect battery to ground cable, includes ECM ground</para>
            </step1>
            <step1>
                <para count="1">Close hood</para>
            </step1>
            <step1>
                <para count="1">Remove wheel chocks</para>
            </step1>
        </svcproc>
    </wtsproc>
</isis>
