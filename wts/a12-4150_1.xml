<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="../isisxsl.xsl"?>
<isis lang="en">
    <stitle>Procedural Guideline - ENGINE FRONT MOUNTING INSULATORS; REPLACE</stitle>
    <wtsproc id="a12-4150" wtscode="A12-4150" group="12">
        <wtsdescrip>ENGINE FRONT MOUNTING INSULATORS; REPLACE</wtsdescrip>
        <model>4300</model>
        <model>4400</model>
        <modelyr>2001</modelyr>
        <engine>DT 466E, 530E</engine>
        <tran>Any</tran>
        <config></config>
        <svcproc svcproctype="remove" graphiccount="0">
            <title>REMOVE</title>
            <step1>
                <para count="1">Install wheel chocks.</para>
            </step1>
            <step1>
                <para count="1">Open hood.</para>
            </step1>
            <step1>
                <para count="1">Remove charge air cooler hose from cooler and turbocharger for access to fan blade.
                </para>
            </step1>
            <step1>
                <para count="1">Disconnect fan blade from fan clutch.</para>
                <specpara>
                    <note>
                        <para>Step performed to prevent damage to shroud</para>
                    </note>
                </specpara>
            </step1>
            <step1>
                <para count="1">Remove both front engine mounting bolts.</para>
            </step1>
            <step1>
                <para count="1">Disconnect hood stop cables, include support hood.</para>
                <specpara>
                    <note>
                        <para>Step performed to increase access to connect lifting crane to engine.</para>
                    </note>
                </specpara>
            </step1>
            <step1>
                <para count="1">Install lifting device to engine lifting bracket.</para>
            </step1>
            <step1>
                <para count="1">Raise front of engine assembly.</para>
            </step1>
            <step1>
                <para count="1">Remove both front engine mount insulators.</para>
            </step1>
        </svcproc>
        <svcproc svcproctype="install" graphiccount="0">
            <title>INSTALL</title>
            <step1>
                <para count="1">Install both front engine mount insulators.</para>
            </step1>
            <step1>
                <para count="1">Lower engine assembly. Position mount bolts through insulator and cross member.</para>
            </step1>
            <step1>
                <para count="1">Remove lifting device from engine.</para>
            </step1>
            <step1>
                <para count="1">Connect hood stop cables, include remove support.</para>
            </step1>
            <step1>
                <para count="1">Tighten both engine mounting bolts.</para>
            </step1>
            <step1>
                <para count="1">Connect fan blade to fan clutch, torque to spec.</para>
            </step1>
            <step1>
                <para count="1">Install charge air cooler hose to cooler and turbocharger.</para>
            </step1>
            <step1>
                <para count="1">Close hood.</para>
            </step1>
            <step1>
                <para count="1">Remove wheel chocks.</para>
            </step1>
        </svcproc>
    </wtsproc>
</isis>
