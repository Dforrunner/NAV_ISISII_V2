<isis lang="en">
    <stitle>Procedural Guideline - DIAMOND LOGIC ECM, REPLACE</stitle>
    <wtsproc id="w1247034" wtscode="A12-1055" group="12">
        <wtsdescrip>DIAMOND LOGIC ECM, REPLACE</wtsdescrip>
        <model>4700</model>
        <model>3800</model>
        <modelyr>1996</modelyr>
        <engine>DT 466E</engine>
        <tran>International 6+1</tran>
        <config></config>
        <svcproc svcproctype="remove" graphiccount="0">
            <title>REMOVE</title>
            <step1>
                <para count="1">Chock wheels.</para>
            </step1>
            <step1>
                <para count="1">Disconnect batteries.</para>
            </step1>
            <step1>
                <para count="1">Remove ECM connector covers.</para>
            </step1>
            <step1>
                <para count="1">Disconnect ECM engine and chassis harness from ECM.</para>
            </step1>
            <step1>
                <para count="1">Remove bolts retaining ECM to mounting bracket. Remove ECM.</para>
                <specpara>
                    <note>
                        <para>Continue if ECM mounting bracket is to be serviced.</para>
                    </note>
                </specpara>
            </step1>
            <step1>
                <para count="1">Remove charge air cooler outlet pipe/hoses from charge air cooler and valve cover for
                    access.
                </para>
            </step1>
            <step1>
                <para count="1">Disconnect wire harness from top of ECM mounting bracket.</para>
            </step1>
            <step1>
                <para count="1">Remove nuts retaining mounting bracket to valve cover. Remove bolts retaining bracket to
                    crankcase. Remove mounting bracket.
                </para>
            </step1>
        </svcproc>
        <svcproc svcproctype="install" graphiccount="0">
            <title>INSTALL</title>
            <step1>
                <para count="1">Install mounting bracket. Torque nuts/bolts to spec.</para>
            </step1>
            <step1>
                <para count="1">Connect wire harness to top of mounting bracket.</para>
            </step1>
            <step1>
                <para count="1">Install charge air cooler pipe/hoses.</para>
            </step1>
            <step1>
                <para count="1">Install ECM to mounting bracket. Torque bolts to spec.</para>
            </step1>
            <step1>
                <para count="1">Connect ECM engine and chassis harness to ECM. Torque to spec.</para>
            </step1>
            <step1>
                <para count="1">Install ECM connector covers.</para>
            </step1>
            <step1>
                <para count="1">Connect batteries.</para>
            </step1>
            <step1>
                <para count="1">Remove wheel chocks.</para>
            </step1>
        </svcproc>
    </wtsproc>
</isis>
