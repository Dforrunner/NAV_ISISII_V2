<isis lang="en">
    <stitle>Procedural Guideline - CHARGE AIR COOLER; REPLACE</stitle>
    <wtsproc id="f09-326" wtscode="F09-0326" group="09">
        <wtsdescrip>CHARGE AIR COOLER; REPLACE</wtsdescrip>
        <model>9000i CONV</model>
        <modelyr>2008</modelyr>
        <engine>Any</engine>
        <tran>Any</tran>
        <config></config>
        <svcproc svcproctype="remove" graphiccount="0">
            <title>REMOVE</title>
            <step1>
                <para count="1">Install wheel chocks, remove radiator grill and open hood</para>
            </step1>
            <step1>
                <para count="1">Disconnect hood tilt assist shock and springs from radiator and support hood</para>
                <specpara>
                    <note>
                        <para>May require two people</para>
                    </note>
                </specpara>
            </step1>
            <step1>
                <para count="1">Disconnect both charge air cooler hoses from charge air cooler</para>
            </step1>
            <step1>
                <para count="1">Disconnect surge tank from charge air cooler and secure out of the way</para>
                <specpara>
                    <note>
                        <para>Do not open cooling system</para>
                    </note>
                </specpara>
            </step1>
            <step1>
                <para count="1">Remove upper section of 2-piece fan shroud and remove bolts retaining lower section to
                    charge air cooler
                </para>
            </step1>
            <step1>
                <para count="1">Remove all recirculation seal mount bolts which retain the seals to the charge air
                    cooler
                </para>
            </step1>
            <step1>
                <para count="1">Remove charge air cooler</para>
                <specpara>
                    <note>
                        <para>May require two people</para>
                    </note>
                </specpara>
            </step1>
        </svcproc>
        <svcproc svcproctype="install" graphiccount="0">
            <title>INSTALL</title>
            <step1>
                <para count="1">Install charge air cooler</para>
                <specpara>
                    <note>
                        <para>May require two people</para>
                    </note>
                </specpara>
            </step1>
            <step1>
                <para count="1">Install all recirculation seal mount bolts which retain the seals to the charge air
                    cooler
                </para>
            </step1>
            <step1>
                <para count="1">Install upper section of 2-piece fan shroud and install bolts retaining lower section to
                    charge air cooler
                </para>
            </step1>
            <step1>
                <para count="1">Connect surge tank</para>
            </step1>
            <step1>
                <para count="1">Connect both charge air cooler hoses from charge air cooler</para>
            </step1>
            <step1>
                <para count="1">Connect hood tilt assist shock and springs from radiator and support hood</para>
            </step1>
            <step1>
                <para count="1">Close hood, install radiator grill and remove wheel chocks</para>
            </step1>
        </svcproc>
    </wtsproc>
</isis>
